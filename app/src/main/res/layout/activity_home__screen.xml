<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.greentech.quran.hardware.Home_Screen">
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation">

    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/test_phone_manually"
            android:background="@color/Linear_one"
            android:clickable="true">

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Test phone manually"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:textColor="@color/text_coloure"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="43dp"
                android:layout_marginLeft="05dp"
                android:src="@drawable/ic_chevron_right_white_24dp"
                />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/test_auto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/Linear_two"
            android:clickable="true">

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Test phone Automaticaly"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginTop="43dp"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="34dp"
                android:layout_marginLeft="05dp"
                android:src="@drawable/ic_chevron_right_white_24dp"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/Linear_one"
            android:clickable="true">

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Schedule Your Test "
                android:textSize="20sp"
                android:textColor="@color/text_coloure"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="43dp"
                android:layout_marginLeft="05dp"
                android:src="@drawable/ic_chevron_right_white_24dp"
                />



        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:background="@color/Linear_two"
                android:clickable="true">

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="About"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="05dp"
                    android:layout_marginTop="43dp"
                    android:src="@drawable/ic_chevron_right_white_24dp" />


            </LinearLayout>
        </LinearLayout>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/colorPrimaryLight"
        app:itemTextColor="@color/colorPrimaryLight"

        android:layout_alignParentBottom="true">


    </android.support.design.widget.BottomNavigationView>
</RelativeLayout>