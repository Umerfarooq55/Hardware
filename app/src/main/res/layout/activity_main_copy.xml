<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_cloure"
    tools:context=".MainActivity">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <Button
        android:id="@+id/bluethooth"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:text="bluetooth"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="30dp"
        android:background="@color/colorPrimary" />
    <Button
        android:id="@+id/camera"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:text="Camera"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.521"
        android:background="@color/colorPrimary" />
    <Button
        android:id="@+id/Telephony"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="telephony"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.276"
        android:background="@color/colorPrimary" />
    <Button
        android:id="@+id/Battery"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="Battery"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.092"
        android:background="@color/colorPrimary"/>
    <Button
        android:id="@+id/multitouch"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:elevation="20dp"
        android:text="multi touch"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.115"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/guideline" />
    <Button
        android:id="@+id/wifi"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:elevation="20dp"
        android:text="wifi"

        android:layout_marginLeft="30dp"

        android:layout_marginRight="8dp"

        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/systeminfo"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:text="System Information"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.892"
        android:background="@color/colorPrimary" />
    <Button
        android:id="@+id/sensers"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="Sensors"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.643"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/gps"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:elevation="20dp"
        android:text="gps status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.769" />

    <Button
        android:id="@+id/cpu"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="cpu"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.769"
        android:background="@color/colorPrimary" />
    <Button
        android:id="@+id/apps"
        android:layout_width="286dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:text="My Applications"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.769"
        android:background="@color/colorPrimary" />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        android:layout_marginLeft="15dp"
        ads:adUnitId="@string/banner_home_footer">
    </com.google.android.gms.ads.AdView>


</LinearLayout>



</ScrollView>